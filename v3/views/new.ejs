<% include partials/header %>
<div class="container">

    <div class="row">
            <h1 style="text-align: center">Create new campground</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form method="POST" action="/campgrounds">
                       <div class="form-group">
                            <input class="form-control" type="text" placeholder="Name of Campground" name="name">
                       </div>
                       <div class="form-group">
                            <input class="form-control" type="text" placeholder="Image URL" name="image">   
                       </div>
                       <div class="form-group">
                            <input class="form-control" type="text" placeholder="Give Description" name="description">   
                       </div>
                       <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit!</button>
                        </div>
                       
                    </form>
                    <a href="/campgrounds">Go Back</a>
            </div>
                
    </div>
</div>
<% include partials/footer %>